            'Tb': 1.58, 'Dy': 1.59, 'Ho': 1.58, 'Er': 1.57, 'Tm': 1.56, 'Yb': 1.56, 'Lu': 1.57, 'Hf': 1.50,
            'Ta': 1.38, 'W': 1.46, 'Re': 1.59, 'Os': 1.28, 'Ir': 1.37, 'Pt': 1.28, 'Au': 1.44, 'Hg': 1.49,
            'Tl': 1.48, 'Pb': 1.47, 'Bi': 1.46, 'Po': 1.45, 'At': 1.47, 'Rn': 1.50, 'Fr': 2.23, 'Ra': 2.01,
            'Ac': 1.86, 'Th': 1.75, 'Pa': 1.69, 'U': 1.70, 'Np': 1.71, 'Pu': 1.72, 'Am': 1.66, 'Cm': 1.66,
            'Bk': 1.68, 'Cf': 1.68, 'Es': 1.65, 'Fm': 1.67, 'Md': 1.73, 'No': 1.76, 'Lr': 1.61, 'Rf': 1.57,
            'Db': 1.49, 'Sg': 1.43, 'Bh': 1.41, 'Hs': 1.34, 'Mt': 1.29, 'default': 0.7
        };

        // Settings
        let settings = {
            bondThreshold: 1.5,
            bondThickness: 0.2,
            atomSize: 1.0,
            backgroundColor: '#1f2937',
            style: 'Cartoon',
            colorBy: 'Atom',
            showCell: true,
            showBond: true,
            viewMode: 'Perspective',
            rotationMode: 'TrackBall'
        };

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Set up event listeners
            setupEventListeners();
            
            // Set up canvas
            setupCanvas();
        });

        // Set up canvas for molecular rendering
        function setupCanvas() {
            const canvas = document.getElementById('molecule-canvas');
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            
            // Set canvas size to match container
            function resizeCanvas() {
                try {
                    const container = canvas.parentElement;
                    if (!container) return;
                    
                    // Get actual container dimensions
                    const rect = container.getBoundingClientRect();
                    const width = rect.width;
                    const height = rect.height;
                    
                    // Only resize if dimensions changed significantly
                    if (Math.abs(canvas.width - width) > 1 || Math.abs(canvas.height - height) > 1) {
                        canvas.width = width;
                        canvas.height = height;
                        viewState.centerX = canvas.width / 2;
                        viewState.centerY = canvas.height / 2;
                        renderMolecule();
                    }
                } catch (error) {
                    console.warn('Error resizing canvas:', error);
                }
            }
            
            // Initial resize
            resizeCanvas();
            
            // Resize on window resize
            window.addEventListener('resize', resizeCanvas);
            
            // Watch for container changes
            const resizeObserver = new ResizeObserver(resizeCanvas);
            resizeObserver.observe(canvas.parentElement);
            
            // Mouse event handlers for interaction
            canvas.addEventListener('mousedown', startDrag);
            canvas.addEventListener('mousemove', drag);
            canvas.addEventListener('mouseup', endDrag);
            canvas.addEventListener('mouseleave', endDrag);
            canvas.addEventListener('wheel', handleZoom);
        }

        // Mouse event handlers
        function startDrag(e) {
            const canvas = document.getElementById('molecule-canvas');
            const rect = canvas.getBoundingClientRect();
            viewState.isDragging = true;
            viewState.lastX = e.clientX - rect.left;
            viewState.lastY = e.clientY - rect.top;
            canvas.style.cursor = 'grabbing';
        }

        function drag(e) {
            if (!viewState.isDragging) return;
            
            const canvas = document.getElementById('molecule-canvas');
            const rect = canvas.getBoundingClientRect();
            const currentX = e.clientX - rect.left;
            const currentY = e.clientY - rect.top;
            
            // Calculate movement
            const deltaX = currentX - viewState.lastX;
            const deltaY = currentY - viewState.lastY;
            
            // Update rotation (invert Y axis for natural feel)
            viewState.rotationY += deltaX * 0.01;
            viewState.rotationX += deltaY * 0.01;
            
            // Update last position
            viewState.lastX = currentX;
            viewState.lastY = currentY;
            
            // Re-render
            renderMolecule();
        }

        function endDrag() {
            viewState.isDragging = false;
            const canvas = document.getElementById('molecule-canvas');
            canvas.style.cursor = 'grab';
        }

        function handleZoom(e) {
            e.preventDefault();
            const zoomIntensity = 0.1;
            const wheel = e.deltaY < 0 ? 1 : -1;
            const zoom = Math.exp(wheel * zoomIntensity);
            
            // Apply zoom
            viewState.scale *= zoom;
            
            // Limit zoom range
            viewState.scale = Math.max(0.1, Math.min(viewState.scale, 10));
            
            // Re-render
            renderMolecule();
        }

        // 3D rotation functions
        function rotatePoint(x, y, z, rotX, rotY) {
            // Rotate around X axis
            const cosX = Math.cos(rotX);
            const sinX = Math.sin(rotX);
            const y1 = y * cosX - z * sinX;
            const z1 = y * sinX + z * cosX;
            
            // Rotate around Y axis
            const cosY = Math.cos(rotY);
            const sinY = Math.sin(rotY);
            const x2 = x * cosY + z1 * sinY;
            const z2 = -x * sinY + z1 * cosY;
            
            return { x: x2, y: y1, z: z2 };
        }

        // Render molecule on canvas
        function renderMolecule() {
            if (!molecularData || molecularData.length === 0) return;
            
            const canvas = document.getElementById('molecule-canvas');
            const ctx = canvas.getContext('2d');
            
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Render all visible molecules
            for (let m = 0; m < Math.min(molecularData.length, 3); m++) {
                // Check if molecule is visible
                if (!moleculeSettings[m+1] || !moleculeSettings[m+1].visible) continue;
                
                const molecule = molecularData[m];
                if (!molecule || !molecule.positions || !molecule.symbols) continue;
                
                const positions = molecule.positions;
                const symbols = molecule.symbols;
                
                // Get molecule settings
                const moleculeSetting = moleculeSettings[m+1];
                const moleculeColor = moleculeSetting.color;
                const moleculeOpacity = moleculeSetting.opacity;
                
                // Transform positions with rotation and scaling
                const transformedPositions = [];
                for (let i = 0; i < positions.length; i++) {
                    const [x, y, z] = positions[i];
                    const rotated = rotatePoint(x, y, z, viewState.rotationX, viewState.rotationY);
                    transformedPositions.push({
                        x: rotated.x * viewState.scale * 50 + viewState.centerX + viewState.offsetX,
                        y: rotated.y * viewState.scale * 50 + viewState.centerY + viewState.offsetY,
                        z: rotated.z
                    });
                }
                
                // Draw bonds (sort by z for proper depth)
                const bonds = [];
                for (let i = 0; i < positions.length; i++) {
                    for (let j = i + 1; j < positions.length; j++) {
                        const [x1, y1, z1] = positions[i];
                        const [x2, y2, z2] = positions[j];
                        
                        // Simple distance calculation
                        const dx = x1 - x2;
                        const dy = y1 - y2;
                        const dz = z1 - z2;
                        const distance = Math.sqrt(dx * dx + dy * dy + dz * dz);
                        
                        // Draw bond if atoms are close enough
                        if (distance < settings.bondThreshold) {
                            bonds.push({
                                x1: transformedPositions[i].x,
                                y1: transformedPositions[i].y,
                                z1: transformedPositions[i].z,
                                x2: transformedPositions[j].x,
                                y2: transformedPositions[j].y,
                                z2: transformedPositions[j].z
                            });
                        }
                    }
                }
                
                // Sort bonds by average z for proper depth rendering
                bonds.sort((a, b) => {
                    const avgZA = (a.z1 + a.z2) / 2;
                    const avgZB = (b.z1 + b.z2) / 2;
                    return avgZA - avgZB;
                });
                
                // Draw bonds if enabled
                if (settings.showBond) {
                    ctx.globalAlpha = moleculeOpacity;
                    for (let i = 0; i < bonds.length; i++) {
                        const bond = bonds[i];
                        ctx.beginPath();
                        ctx.moveTo(bond.x1, bond.y1);
                        ctx.lineTo(bond.x2, bond.y2);
                        ctx.strokeStyle = '#CCCCCC';
                        ctx.lineWidth = settings.bondThickness * 20;
                        ctx.stroke();
                    }
                    ctx.globalAlpha = 1.0;
                }
                
                // Sort atoms by z for proper depth rendering
                const atomsWithDepth = [];
                for (let i = 0; i < transformedPositions.length; i++) {
                    atomsWithDepth.push({
                        x: transformedPositions[i].x,
                        y: transformedPositions[i].y,
                        z: transformedPositions[i].z,
                        symbol: symbols[i]
                    });
                }
                
                atomsWithDepth.sort((a, b) => a.z - b.z);
                
                // Draw atoms
                ctx.globalAlpha = moleculeOpacity;
                for (let i = 0; i < atomsWithDepth.length; i++) {
                    const atom = atomsWithDepth[i];
                    const symbol = atom.symbol;
                    
                    // Determine atom color based on settings
                    let color;
                    if (settings.colorBy === 'Molecule') {
                        color = moleculeColor;
                    } else {
                        color = elementColors[symbol] || elementColors['default'];
                    }
                    
                    const radius = (elementRadii[symbol] || elementRadii['default']) * viewState.scale * 15 * settings.atomSize;
                    
                    // Draw atom based on style
                    switch (settings.style) {
                        case 'Bubble':
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                            ctx.fillStyle = color;
                            ctx.globalAlpha = moleculeOpacity * 0.7;
                            ctx.fill();
                            ctx.globalAlpha = moleculeOpacity;
                            break;
                        case 'Glossy':
                            // Create gradient for glossy effect
                            const gradient = ctx.createRadialGradient(
                                atom.x - radius/3, atom.y - radius/3, 1,
                                atom.x, atom.y, radius
                            );
                            gradient.addColorStop(0, '#FFFFFF');
                            gradient.addColorStop(0.3, color);
                            gradient.addColorStop(1, darkenColorHex(color, 30));
                            ctx.fillStyle = gradient;
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                            ctx.fill();
                            break;
                        case 'Neon':
                            // Draw glow effect
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius * 1.5, 0, 2 * Math.PI);
                            ctx.fillStyle = color;
                            ctx.globalAlpha = moleculeOpacity * 0.3;
                            ctx.fill();
                            ctx.globalAlpha = moleculeOpacity;
                            // Draw main atom
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                            ctx.fillStyle = color;
                            ctx.fill();
                            break;
                        default: // Cartoon
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                            ctx.fillStyle = color;
                            ctx.fill();
                            // Draw atom outline
                            ctx.beginPath();
                            ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                            ctx.strokeStyle = '#000000';
                            ctx.lineWidth = 1;
                            ctx.stroke();
                            // Draw element symbol
                            ctx.fillStyle = '#000000';
                            ctx.font = `${Math.max(10, radius)}px Arial`;
                            ctx.textAlign = 'center';
                            ctx.textBaseline = 'middle';
                            ctx.fillText(symbol, atom.x, atom.y);
                    }
                }
                ctx.globalAlpha = 1.0;
            }
        }

        // Helper function to darken a color
        function darkenColorHex(color, percent) {
            let R = parseInt(color.substring(1, 3), 16);
            let G = parseInt(color.substring(3, 5), 16);
            let B = parseInt(color.substring(5, 7), 16);
            
            R = Math.floor(R * (100 - percent) / 100);
            G = Math.floor(G * (100 - percent) / 100);
            B = Math.floor(B * (100 - percent) / 100);
            
            return `#${R.toString(16).padStart(2, '0')}${G.toString(16).padStart(2, '0')}${B.toString(16).padStart(2, '0')}`;
        }

        // Set up event listeners
        function setupEventListeners() {
            // Sidebar toggle
            document.getElementById('sidebar-toggle').addEventListener('click', toggleSidebar);
            
            // Card toggles
            document.querySelector('.card-header[onclick="toggleCard(\'advanced\')"]').addEventListener('click', () => toggleCard('advanced'));
            document.querySelector('.card-header[onclick="toggleCard(\'display\')"]').addEventListener('click', () => toggleCard('display'));
            document.querySelector('.card-header[onclick="toggleCard(\'interaction\')"]').addEventListener('click', () => toggleCard('interaction'));
            document.querySelector('.card-header[onclick="toggleCard(\'molecules\')"]').addEventListener('click', () => toggleCard('molecules'));
            
            // Slider events
            document.getElementById('bond-threshold').addEventListener('input', function() {
                document.getElementById('bond-threshold-value').textContent = this.value;
                settings.bondThreshold = parseFloat(this.value);
                renderMolecule();
            });
            
            document.getElementById('bond-thickness').addEventListener('input', function() {
                document.getElementById('bond-thickness-value').textContent = parseFloat(this.value).toFixed(2);
                settings.bondThickness = parseFloat(this.value);
                renderMolecule();
            });
            
            document.getElementById('atom-size').addEventListener('input', function() {
                document.getElementById('atom-size-value').textContent = parseFloat(this.value).toFixed(1) + '×';
                settings.atomSize = parseFloat(this.value);
                renderMolecule();
            });
            
            // Color picker
            document.getElementById('background-color').addEventListener('input', function() {
                document.getElementById('background-color-value').textContent = this.value;
                document.querySelector('.viewer-container').style.background = 
                    `linear-gradient(135deg, ${this.value}, ${darkenColorHex(this.value, 20)})`;
                settings.backgroundColor = this.value;
            });
            
            // Style selector
            document.getElementById('style').addEventListener('change', function() {
                settings.style = this.value;
                renderMolecule();
            });
            
            // Color by selector
            document.getElementById('color-by').addEventListener('change', function() {
                settings.colorBy = this.value;
                renderMolecule();
            });
            
            // Switches
            document.getElementById('show-cell').addEventListener('change', function() {
                settings.showCell = this.checked;
                renderMolecule();
            });
            
            document.getElementById('show-bond').addEventListener('change', function() {
                settings.showBond = this.checked;
                renderMolecule();
            });
            
            // Button groups
            setupButtonGroup('view-mode', ['orthographic-btn', 'perspective-btn']);
            setupButtonGroup('rotation-mode', ['trackball-btn', 'orbit-btn']);
            
            // Molecule settings
            for (let i = 1; i <= 3; i++) {
                // Color pickers
                document.getElementById(`molecule-${i}-color`).addEventListener('input', function() {
                    moleculeSettings[i].color = this.value;
                    renderMolecule();
                });
                
                // Visibility switches
                document.getElementById(`molecule-${i}-visible`).addEventListener('change', function() {
                    moleculeSettings[i].visible = this.checked;
                    renderMolecule();
                });
                
                // Opacity sliders
                document.getElementById(`molecule-${i}-opacity`).addEventListener('input', function() {
                    const value = parseFloat(this.value);
                    moleculeSettings[i].opacity = value;
                    document.getElementById(`molecule-${i}-opacity-value`).textContent = `${Math.round(value * 100)}%`;
                    renderMolecule();
                });
            }
            
            // Toolbar buttons
            document.getElementById('download-btn').addEventListener('click', function() {
                alert('Save as PNG');
            });
        }

        // Set up button groups
        function setupButtonGroup(groupName, buttonIds) {
            buttonIds.forEach(id => {
                document.getElementById(id).addEventListener('click', function() {
                    // Remove active class from all buttons in group
                    buttonIds.forEach(btnId => {
                        document.getElementById(btnId).classList.remove('active');
                    });
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Update settings
                    if (groupName === 'view-mode') {
                        settings.viewMode = this.textContent.trim();
                    } else if (groupName === 'rotation-mode') {
                        settings.rotationMode = this.textContent.trim();
                    }
                });
            });
        }

        // Toggle sidebar
        function toggleSidebar() {
            sidebarOpen = !sidebarOpen;
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            
            if (sidebarOpen) {
                sidebar.style.width = '320px';
                sidebar.classList.remove('collapsed');
            } else {
                sidebar.style.width = '0';
                sidebar.classList.add('collapsed');
            }
            
            // Trigger resize event to adjust canvas
            setTimeout(() => {
                window.dispatchEvent(new Event('resize'));
            }, 350);
        }

        // Toggle card content
        function toggleCard(cardId) {
            cards[cardId] = !cards[cardId];
            const content = document.getElementById(cardId + '-content');
            const arrow = document.getElementById(cardId + '-arrow');
            
            if (cards[cardId]) {
                content.classList.remove('collapsed');
                arrow.style.transform = 'rotate(0deg)';
            } else {
                content.classList.add('collapsed');
                arrow.style.transform = 'rotate(-90deg)';
            }
        }

        // API for Python integration
        function setMolecularData(data) {
            molecularData = data;
            renderMolecule();
        }
        
        // Make functions available globally
        window.setMolecularData = setMolecularData;
        window.toggleCard = toggleCard;
