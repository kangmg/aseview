                    </div>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="main-content">
            <button class="sidebar-toggle" id="sidebar-toggle">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <div class="toolbar">
                <button class="toolbar-btn" id="download-btn">
                    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                </button>
            </div>

            <div class="viewer-container">
                <div class="viewer" id="viewer">
                    <canvas id="molecule-canvas"></canvas>
                    <div class="help-text" id="help-text">Drag to rotate • Scroll to zoom</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let molecularData = [];
        let sidebarOpen = true;
        let cards = {
            advanced: true,
            display: true,
            interaction: true,
            molecules: true
        };

        // Molecule settings
        let moleculeSettings = {
            '1': { color: '#3b82f6', opacity: 0.8, visible: true },
            '2': { color: '#ef4444', opacity: 0.9, visible: true },
            '3': { color: '#06b6d4', opacity: 0.5, visible: false }
        };

        // Visualization state
        let viewState = {
            rotationX: 0,
            rotationY: 0,
            scale: 1,
            offsetX: 0,
            offsetY: 0,
            isDragging: false,
            lastX: 0,
            lastY: 0,
            centerX: 0,
            centerY: 0
        };

        // Element colors (from js/styles.js)
        const elementColors = {
