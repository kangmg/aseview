        // Settings
        let settings = {
            bondThreshold: 1.5,
            bondThickness: 0.2,
            atomSize: 1.0,
            animationSpeed: 30,
            forceScale: 1.0,
            backgroundColor: '#1f2937',
            style: 'Cartoon',
            showCell: true,
            showBond: true,
            showEnergyPlot: false,
            showForces: false,
            viewMode: 'Perspective',
            rotationMode: 'TrackBall'
        };

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Set up event listeners
            setupEventListeners();
            
            // Set up canvas
            setupCanvas();
        });

        // Set up canvas for molecular rendering
        function setupCanvas() {
            const canvas = document.getElementById('molecule-canvas');
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            
            // Set canvas size to match container
            function resizeCanvas() {
                try {
                    const container = canvas.parentElement;
                    if (!container) return;
                    
                    // Get actual container dimensions
                    const rect = container.getBoundingClientRect();
                    const width = rect.width;
                    const height = rect.height;
                    
                    // Only resize if dimensions changed significantly
                    if (Math.abs(canvas.width - width) > 1 || Math.abs(canvas.height - height) > 1) {
                        canvas.width = width;
                        canvas.height = height;
                        viewState.centerX = canvas.width / 2;
                        viewState.centerY = canvas.height / 2;
                        renderMolecule();
                    }
                } catch (error) {
                    console.warn('Error resizing canvas:', error);
                }
            }
            
            // Initial resize
            resizeCanvas();
            
            // Resize on window resize
            window.addEventListener('resize', resizeCanvas);
            
            // Watch for container changes
            const resizeObserver = new ResizeObserver(resizeCanvas);
            resizeObserver.observe(canvas.parentElement);
            
            // Mouse event handlers for interaction
            canvas.addEventListener('mousedown', startDrag);
            canvas.addEventListener('mousemove', drag);
            canvas.addEventListener('mouseup', endDrag);
            canvas.addEventListener('mouseleave', endDrag);
            canvas.addEventListener('wheel', handleZoom);
        }

        // Mouse event handlers
        function startDrag(e) {
            const canvas = document.getElementById('molecule-canvas');
            const rect = canvas.getBoundingClientRect();
            viewState.isDragging = true;
            viewState.lastX = e.clientX - rect.left;
            viewState.lastY = e.clientY - rect.top;
            canvas.style.cursor = 'grabbing';
        }

        function drag(e) {
            if (!viewState.isDragging) return;
            
            const canvas = document.getElementById('molecule-canvas');
            const rect = canvas.getBoundingClientRect();
            const currentX = e.clientX - rect.left;
            const currentY = e.clientY - rect.top;
            
            // Calculate movement
            const deltaX = currentX - viewState.lastX;
            const deltaY = currentY - viewState.lastY;
            
            // Update rotation (invert Y axis for natural feel)
            if (viewState.rotationMode === 'trackball') {
                viewState.rotationY += deltaX * 0.01;
                viewState.rotationX += deltaY * 0.01;
            } else { // orbit
                viewState.rotationY += deltaX * 0.01;
                // For orbit, we might want different behavior for X rotation
                viewState.rotationX += deltaY * 0.01;
            }
            
            // Update last position
            viewState.lastX = currentX;
            viewState.lastY = currentY;
            
            // Re-render
            renderMolecule();
        }

        function endDrag() {
            viewState.isDragging = false;
            const canvas = document.getElementById('molecule-canvas');
            canvas.style.cursor = 'grab';
        }

        function handleZoom(e) {
            e.preventDefault();
            const zoomIntensity = 0.1;
            const wheel = e.deltaY < 0 ? 1 : -1;
            const zoom = Math.exp(wheel * zoomIntensity);
            
            // Apply zoom
            viewState.scale *= zoom;
            
            // Limit zoom range
            viewState.scale = Math.max(0.1, Math.min(viewState.scale, 10));
            
            // Re-render
            renderMolecule();
        }

        // 3D rotation functions
        function rotatePoint(x, y, z, rotX, rotY) {
            // Rotate around X axis
            const cosX = Math.cos(rotX);
            const sinX = Math.sin(rotX);
            const y1 = y * cosX - z * sinX;
            const z1 = y * sinX + z * cosX;
            
            // Rotate around Y axis
            const cosY = Math.cos(rotY);
            const sinY = Math.sin(rotY);
            const x2 = x * cosY + z1 * sinY;
            const z2 = -x * sinY + z1 * cosY;
            
            return { x: x2, y: y1, z: z2 };
        }

        // Render molecule on canvas
        function renderMolecule() {
            if (!molecularData || molecularData.length === 0) return;
            
            const canvas = document.getElementById('molecule-canvas');
            const ctx = canvas.getContext('2d');
            
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Get first molecule
            const molecule = molecularData[0];
            if (!molecule || !molecule.positions || !molecule.symbols) return;
            
            const positions = molecule.positions;
            const symbols = molecule.symbols;
            
            // Transform positions with rotation and scaling
            const transformedPositions = [];
            for (let i = 0; i < positions.length; i++) {
                const [x, y, z] = positions[i];
                const rotated = rotatePoint(x, y, z, viewState.rotationX, viewState.rotationY);
                transformedPositions.push({
                    x: rotated.x * viewState.scale * 50 + viewState.centerX + viewState.offsetX,
                    y: rotated.y * viewState.scale * 50 + viewState.centerY + viewState.offsetY,
                    z: rotated.z
                });
            }
            
            // Draw bonds (sort by z for proper depth)
            const bonds = [];
            for (let i = 0; i < positions.length; i++) {
                for (let j = i + 1; j < positions.length; j++) {
                    const [x1, y1, z1] = positions[i];
                    const [x2, y2, z2] = positions[j];
                    
                    // Simple distance calculation
                    const dx = x1 - x2;
                    const dy = y1 - y2;
                    const dz = z1 - z2;
                    const distance = Math.sqrt(dx * dx + dy * dy + dz * dz);
                    
                    // Draw bond if atoms are close enough
                    if (distance < settings.bondThreshold) {
                        bonds.push({
                            x1: transformedPositions[i].x,
                            y1: transformedPositions[i].y,
                            z1: transformedPositions[i].z,
                            x2: transformedPositions[j].x,
                            y2: transformedPositions[j].y,
                            z2: transformedPositions[j].z
                        });
                    }
                }
            }
            
            // Sort bonds by average z for proper depth rendering
            bonds.sort((a, b) => {
                const avgZA = (a.z1 + a.z2) / 2;
                const avgZB = (b.z1 + b.z2) / 2;
                return avgZA - avgZB;
            });
            
            // Draw bonds if enabled
            if (settings.showBond) {
                for (let i = 0; i < bonds.length; i++) {
                    const bond = bonds[i];
                    ctx.beginPath();
                    ctx.moveTo(bond.x1, bond.y1);
                    ctx.lineTo(bond.x2, bond.y2);
                    ctx.strokeStyle = '#CCCCCC';
                    ctx.lineWidth = settings.bondThickness * 20;
                    ctx.stroke();
                }
            }
            
            // Sort atoms by z for proper depth rendering
            const atomsWithDepth = [];
            for (let i = 0; i < transformedPositions.length; i++) {
                atomsWithDepth.push({
                    x: transformedPositions[i].x,
                    y: transformedPositions[i].y,
                    z: transformedPositions[i].z,
                    symbol: symbols[i]
                });
            }
            
            atomsWithDepth.sort((a, b) => a.z - b.z);
            
            // Draw atoms
            for (let i = 0; i < atomsWithDepth.length; i++) {
                const atom = atomsWithDepth[i];
                const symbol = atom.symbol;
                
                // Get element properties
                const info = atomInfo[symbol] || atomInfo['default'];
                const color = '#' + info.color.toString(16).padStart(6, '0');
                const radius = info.radius * viewState.scale * 15 * settings.atomSize;
                
                // Draw atom based on style
                switch (settings.style) {
                    case 'Bubble':
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.fillStyle = color;
                        ctx.globalAlpha = 0.7;
                        ctx.fill();
                        ctx.globalAlpha = 1.0;
                        break;
                    case 'Glossy':
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        // Create gradient for glossy effect
                        const gradient = ctx.createRadialGradient(
                            atom.x - radius/3, atom.y - radius/3, 1,
                            atom.x, atom.y, radius
                        );
                        gradient.addColorStop(0, '#FFFFFF');
                        gradient.addColorStop(0.2, color);
                        gradient.addColorStop(1, darkenColorHex(color, 30));
                        ctx.fillStyle = gradient;
                        ctx.fill();
                        break;
                    case 'Neon':
                        // Draw glow effect
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius * 1.5, 0, 2 * Math.PI);
                        ctx.fillStyle = color;
                        ctx.globalAlpha = 0.3;
                        ctx.fill();
                        ctx.globalAlpha = 1.0;
                        // Draw main atom
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.fillStyle = color;
                        ctx.fill();
                        break;
                    case 'Rowan':
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.fillStyle = color;
                        ctx.fill();
                        // Draw outline
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius * 1.05, 0, 2 * Math.PI);
                        ctx.strokeStyle = '#000000';
                        ctx.lineWidth = 1;
                        ctx.stroke();
                        break;
                    case 'Grey':
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.fillStyle = '#808080';
                        ctx.fill();
                        // Draw element symbol
                        ctx.fillStyle = '#FFFFFF';
                        ctx.font = `${Math.max(10, radius)}px Arial`;
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'middle';
                        ctx.fillText(symbol, atom.x, atom.y);
                        break;
                    default: // Cartoon
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.fillStyle = color;
                        ctx.fill();
                        // Draw outline
                        ctx.beginPath();
                        ctx.arc(atom.x, atom.y, radius, 0, 2 * Math.PI);
                        ctx.strokeStyle = '#000000';
                        ctx.lineWidth = 1;
                        ctx.stroke();
                        // Draw element symbol
                        ctx.fillStyle = '#000000';
                        ctx.font = `${Math.max(10, radius)}px Arial`;
                        ctx.textAlign = 'center';
                        ctx.textBaseline = 'middle';
                        ctx.fillText(symbol, atom.x, atom.y);
                }
            }
        }

        // Helper function to darken a color
        function darkenColorHex(color, percent) {
            let R = parseInt(color.substring(1, 3), 16);
            let G = parseInt(color.substring(3, 5), 16);
            let B = parseInt(color.substring(5, 7), 16);
            
            R = Math.floor(R * (100 - percent) / 100);
            G = Math.floor(G * (100 - percent) / 100);
            B = Math.floor(B * (100 - percent) / 100);
            
            return `#${R.toString(16).padStart(2, '0')}${G.toString(16).padStart(2, '0')}${B.toString(16).padStart(2, '0')}`;
        }

        // Periodicity functions
        function addPeriodicity() {
            const select = document.getElementById('periodicity-select');
            const value = select.value;
            
            if (!periodicities.includes(value)) {
                periodicities.push(value);
                renderPeriodicities();
            }
        }

        function removePeriodicity(value) {
            periodicities = periodicities.filter(p => p !== value);
            renderPeriodicities();
        }

        function renderPeriodicities() {
            const container = document.getElementById('periodicities-list');
            container.innerHTML = '';
            
            periodicities.forEach(periodicity => {
                const item = document.createElement('div');
                item.className = 'periodicity-item';
                item.innerHTML = `
                    <span class="periodicity-value">${periodicity}</span>
                    <button class="btn" onclick="removePeriodicity('${periodicity}')" style="padding: 0.25rem; min-width: 30px;">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                `;
                container.appendChild(item);
            });
        }

