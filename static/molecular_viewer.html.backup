            });
            
            document.getElementById('show-forces').addEventListener('change', function() {
                settings.showForces = this.checked;
            });
            
            // Button groups
            setupButtonGroup('view-mode', ['orthographic-btn', 'perspective-btn']);
            setupButtonGroup('rotation-mode', ['trackball-btn', 'orbit-btn']);
            
            // Periodicity controls
            document.getElementById('add-periodicity-btn').addEventListener('click', addPeriodicity);
            
            // Toolbar buttons
            document.getElementById('play-btn').addEventListener('click', function() {
                alert('Play/Pause animation');
            });
            
            document.getElementById('copy-btn').addEventListener('click', function() {
                alert('Copy current view');
            });
            
            document.getElementById('video-btn').addEventListener('click', function() {
                alert('Save as GIF');
            });
            
            document.getElementById('download-btn').addEventListener('click', function() {
                alert('Save as PNG');
            });
        }

        // Set up button groups
        function setupButtonGroup(groupName, buttonIds) {
            buttonIds.forEach(id => {
                document.getElementById(id).addEventListener('click', function() {
                    // Remove active class from all buttons in group
                    buttonIds.forEach(btnId => {
                        document.getElementById(btnId).classList.remove('active');
                    });
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Update state
                    if (groupName === 'rotation-mode') {
                        if (id === 'trackball-btn') {
                            viewState.rotationMode = 'trackball';
                        } else if (id === 'orbit-btn') {
                            viewState.rotationMode = 'orbit';
                        }
                    }
                });
            });
        }

        // Toggle sidebar
        function toggleSidebar() {
            sidebarOpen = !sidebarOpen;
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            
            if (sidebarOpen) {
                sidebar.style.width = '320px';
                sidebar.classList.remove('collapsed');
            } else {
                sidebar.style.width = '0';
                sidebar.classList.add('collapsed');
            }
            
            // Trigger resize event to adjust canvas
            setTimeout(() => {
                window.dispatchEvent(new Event('resize'));
            }, 350);
        }

        // Toggle card content
        function toggleCard(cardId) {
            cards[cardId] = !cards[cardId];
            const content = document.getElementById(cardId + '-content');
            const arrow = document.getElementById(cardId + '-arrow');
            
            if (cards[cardId]) {
                content.classList.remove('collapsed');
                arrow.style.transform = 'rotate(0deg)';
            } else {
                content.classList.add('collapsed');
                arrow.style.transform = 'rotate(-90deg)';
            }
        }

        // API for Python integration
        function setMolecularData(data) {
            molecularData = data;
            renderMolecule();
        }
        
        // Make functions available globally
        window.removePeriodicity = removePeriodicity;
